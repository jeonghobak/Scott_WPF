<Window x:Class="ScottStudy2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ScottStudy2.ViewModel"
        xmlns:local="clr-namespace:ScottStudy2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500">
    <Window.Resources>
        <vm:MainChartVM x:Key="vm"/>
    </Window.Resources>

    <DockPanel DataContext="{StaticResource vm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="Menu_Open_Click"/>
                <MenuItem Header="Exit" Click="Menu_Exit_Click"/>
            </MenuItem>
        </Menu>

        <ToolBar DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Generate"
                        Margin="5,0,0,0"
                        Command="{Binding AddSampleDataCommand}"/>
            </ToolBar>
        </ToolBar>

        <Grid>
            <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding PlotControl}"/>
        </Grid>

    </DockPanel>
</Window>
