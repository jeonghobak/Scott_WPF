<Window x:Class="DataLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:vm="clr-namespace:DataLogger.ViewModel"
        xmlns:local="clr-namespace:DataLogger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:MainChartVM x:Key="vm"/>
    </Window.Resources>

    <DockPanel DataContext="{StaticResource vm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Full" Margin="0 0 10 0" Command="{Binding ViewFullCommand}"/>
            <Button Content="Jump" Margin="0 0 10 0" Command="{Binding ViewJumpCommand}"/>
            <Button Content="Slide" Margin="0 0 10 0" Command="{Binding ViewSlideCommand}"/>
        </ToolBar>

        <Grid>
            <ScottPlot:WpfPlot x:Name="PlotControl"/>
        </Grid>
    </DockPanel>
</Window>
